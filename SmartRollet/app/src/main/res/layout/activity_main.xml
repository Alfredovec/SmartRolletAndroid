<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sergii_rud.smartrollet.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open"
        android:id="@+id/Open"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/Auto" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/Close"
        android:layout_alignTop="@+id/Open"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/Auto" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto"
        android:id="@+id/Auto"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/FullOpen"
        android:layout_alignBottom="@+id/Open" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full open"
        android:id="@+id/FullOpen"
        android:layout_above="@+id/Open"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/Open" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full close"
        android:id="@+id/FullClose"
        android:layout_alignTop="@+id/FullOpen"
        android:layout_alignEnd="@+id/Close"
        android:layout_alignStart="@+id/Close" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/Auto"
        android:layout_alignEnd="@+id/FullClose"
        android:src="@drawable/closedrollet"
        android:scaleType="fitXY" />
</RelativeLayout>
